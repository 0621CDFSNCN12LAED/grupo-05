<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head") %>
        <title>Creando</title>
    </head>
    <body>
        <%- include("../partials/header") %> <%-
        include("../partials/slide-show")%>
        <main id="main-content">
            <h2>Creación de producto</h2>
            <div class="feedback">
                <% if(typeof errors != "undefined") {%>
                    <p>Errores</p>
                    <ul>
                        <% for(let i=0; i < errors.length; i++) {%>
                            <li><%= errors[i].msg %> </li>
                        <% } %>
                    </ul>
                <% } %>  
            </div>
            <form action="/product/create" method="POST" class="flex justify-space-around" enctype="multipart/form-data">
                <article
                    class="
                        flex-detail
                        product-detail
                        align-center
                        justify-space-around
                        w-100
                    "
                >

                    <div class="flex direction-column">
                        <label class="form-label">Nombre producto:</label>
                        <input class="form-input" type="text" name="title" value="<%= locals.old && old.title ? old.title : "" %>">
                        <label class="form-label">Tipo de producto:</label>
                        <select class="form-input" name="type_id">
                            <% for(type of types) { %>
                                <option value=<%= type.id %>><%= type.name %></option>
                            <% } %>
                        </select>
                        <label class="form-label" >Precio del producto</label>
                        <input class="form-input" type="number" name="price" value="<%= locals.old && old.price ? old.price : "" %>">
                        <label class="form-label">Imagen producto:</label>
                        <input class="form-input" type="file" name="img" accept=".jpg">

                        <h1>Descripción</h1>

                        <textarea name="description" ><%= locals.old && old.description ? old.description : "" %></textarea>
                    </div>
                </article>
                <button type="submit">Enviar</button>
            </form>
        </main>
        <%- include("../partials/footer") %>
    </body>
</html>
